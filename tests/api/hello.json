{
	"info": {
		"_postman_id": "c472b03f-a889-472c-826c-b19b61125f1b",
		"name": "hello",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "POST hello",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is \" + data[\"response\"][\"status\"], function () {\r",
							"    pm.response.to.have.status(data[\"response\"][\"status\"]);\r",
							"});\r",
							"\r",
							"pm.test(\"Body is correct\", function () {\r",
							"    pm.response.to.have.body(data[\"response\"][\"body\"]);\r",
							"});"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.collectionVariables.set(\"request_name\", data[\"request\"][\"name\"]);\r",
							"pm.collectionVariables.set(\"request_age\", data[\"request\"][\"age\"]);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"name\": \"{{request_name}}\",\r\n    \"age\": {{request_age}}\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{url}}/hello",
					"host": [
						"{{url}}"
					],
					"path": [
						"hello"
					]
				}
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "request_name",
			"value": ""
		},
		{
			"key": "request_age",
			"value": ""
		}
	]
}